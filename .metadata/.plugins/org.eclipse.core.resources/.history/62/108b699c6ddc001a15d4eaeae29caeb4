package stackjava.com.springmvc.controller;

import java.io.File;
import java.io.IOException;
import java.nio.file.Files;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class UploadFile {
	@GetMapping("/uploadFile/{image}")
	public byte[] index(@PathVariable("image") String image) throws IOException {
		String path = "C:/files";
//		Path url = Paths.get(path + File.separator + image + ".jpg" );
		File serverFile = new File(path + File.separator + image + ".jpg");
		return Files.readAllBytes(serverFile.toPath());
	}
}
